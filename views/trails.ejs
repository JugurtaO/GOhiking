                <% }else{ %>
                    <li class="nav-link"><a href="/Logout"><i class="mx-4 fas fa-sign-out-alt"></i></a></li>
                    <li class="nav-link"> <a href="/Signout"><i class="mx-4 fas fa-user-minus"></i></a></li>
                    <% } %>
                        <li class="nav-link">
                            <a href="#first"> <i class="mx-4 fas fa-arrow-up"></i></a>
                        </li>


        </ul>
    </div>
</nav>



<div class="mx-5 flashMsg">
    <%- include('./partials/flashMsg.ejs') %>
</div>
<div class="search-box">
    <form class="search-section" action="/campgrounds/search" method="POST">
        <input type="text" placeholder="Search By Place" name="searchedInput" id="search-section__input"
            autofocus>
        <i id="search-section__icon" class="fas fa-search "></i>
    </form>
</div>
<div class="map-box my-5">
    <i id="map-box__toggler" class="fas fa-map-marker-alt "></i>
    <div class="map-box__map" id='map'></div>
</div>
<div class="scrollDown-box my-5">
    <a href="#last"><i id="scrollDown-box__scroller" class="fas fa-arrow-down"></i></a>
</div>
<main>
    <div class="row">
        <% for(let trail of allTrails) {%>
            <a class="col-xs-6 col-lg-4" href="/trails/<%=trail.trail_id %>">
                <div class="card shadow-lg p-4  mb-5 bg-body rounded">
                    <img src=" <%= trail.trail_image %>  "
                        class="card-img-top img-thumbnail img-fluid">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=trail.trail_name %>
                        </h5>
                        <p class="card-text text-muted">
                            <%= trail.trail_location %>
                        </p>
                        <button type="button" class="btn btn-outline-success btn-md">
                            <%= trail.trail_name %>
                        </button>
                    </div>
                </div>
            </a>

            <% } %>
    </div>
</main>
<div id="last"></div>
<div class="bottumPage">
    <a href="/home"><i class="mx-4 fas fa-home"></i></a>
    <a href="/campgrounds"><i class="mx-4 fas fa-campground"></i></a>
    <a href="/campgrounds/new"><i class="mx-4 fas fa-map-marked-alt"></i></a>
    <% if(!active_user_email){ %>
        <a href="/login"><i class="mx-4 fas fa-user-check"></i></a>
        <a href="/Signup"><i class=" mx-4 fas fa-user-plus"></i></a>
        <% }else{ %>
            <a href="/Logout"><i class="mx-4 fas fa-sign-out-alt"></i></a>
            <a href="/Signout"><i class=" mx-4 fas fa-user-minus"></i></a>
            <% } %>
                <a href="#first"> <i class="fas fa-arrow-up"></i></a>
</div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <script>
    const API_KEY = '<%- process.env.TOMTOM_API_KEY%>';
    const allTrails = <%- JSON.stringify(allTrails)%>;
  </script>
  <script>
    const center = [13.404954, 52.520008];

    let map = tt.map({
      key: API_KEY,
      container: "map",
      center: center,
      zoom: 5
    })
    const popupOffsets = {
      top: [0, 0],
      bottom: [0, -70],
      "bottom-right": [0, -70],
      "bottom-left": [0, -70],
      left: [25, -35],
      right: [-25, -35],
    }

    map.on('load', () => {




      // Add markers to the map
      allTrails.forEach(trail => {
        let popup = new tt.Popup({
          offset: popupOffsets
        }).setHTML(`
        <div style="width: 170px; height: 130px; background-color: #fff; border-radius: 4px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);">
          <img src=${trail.trail_image} alt="Image" style="width:100%; height: 70%;">
          <h6 ><b>${trail.trail_name}</h6> 
         
        </div>

      
        `);
        let marker = new tt.Marker().setLngLat([trail.trail_longitude, trail.trail_latitude]).setPopup(popup).addTo(map);
      });

      map.addControl(new tt.FullscreenControl());
      map.addControl(new tt.NavigationControl());




    });
  </script>
</body>

</html>