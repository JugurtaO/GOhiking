<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title> Login </title>
  <link rel="stylesheet" href="/login.css"> 
  <link rel="shortcut icon" type="image/x-icon" href="https://img.icons8.com/color/48/landscape.png" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <meta name=”viewport” content=”width=device-width, initial-scale=1.0">

</head>

<body>
  <%- include('./partials/navbar.ejs') %>
  <%- include('./partials/flashMsg.ejs') %>

  <form action="/users/login" method="post" class="needs-validation" novalidate>
    <div class="login-box">
      <h1>Login</h1>
      <div class="textbox">
        <i class="fas fa-envelope"></i>
        <input type="text" placeholder="Email" name="user_email" required autofocus>
        <br>
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">Invalid email</div>
      </div>

      <div class="textbox">
        <i class="fas fa-lock"></i>
        <input type="password" placeholder="Password" name="user_password" required>
        <br>
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">Invalid Password</div>
      </div>
      <button id="login-box__btn" class="btn btn-outline-success my-3"><i class="fas fa-user-check"></i> login</button>
    </div>
  </form>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>


</html>