<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <link rel="shortcut icon" type="image/x-icon" href="https://icons8.com/icon/16958/trekking" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous">


  <title> <%= Trail.trail_name %></title>
</head>

<body class="text-center">
  <%- include('./partials/navbar') %>


  <div class="row">
    <div class="col-6 ">
      <div class="card mb-5">
        <img src="<%= Trail.trail_image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"> <%= Trail.trail_name %></h5>

        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted"><%= Trail.trail_location %></li>

        </ul>
        <div class="card-body">
          <form class="d-inline" action="/trails/<%=Trail.trail_id%>/delete" method="post">

            <button class="btn btn-danger" style="color: white;" type="submit"> Delete</button>
          </form>

          <a href="/trails" class="card-link btn btn-info" style="color: white;">All trails</a>
        </div>

      </div>
      
    </div>
    <div class="col-6">
      <h2>Leave a Review</h2>
      <form action="/trails/<%= Trail.trail_id %>/reviews/add" method="post" class="mb-3">
        <div class="mb-3">
          <label class="form-label" for="rating">Rating </label>
          <input type="range" class="form-range" min="1" max="5" id="rating" name="review_rating">

        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review </label>
         <textarea class="form-control" name="review_text" id="body" cols="30" rows="3" required></textarea>

        </div>

        <button class="btn btn-success" type="submit" style="color: white;"> Submit</button>
      </form>
      <% allReviews.forEach(review => { %>
        <div class="card mb-3">
          <div class=" card-body">
            <h5 class="card-title">Rating: <%= review.review_rating %></h5>
          
            <p class="card-text"> Review: <%= review.review_text %></p>
          </div>
        </div>
       
       
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>